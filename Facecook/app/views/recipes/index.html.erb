<table id="recipes">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Descrizione</th>
      <th>Categoria</th>
      <th>Immagine</th>	
      <th>Dettagli</th>
    </tr>
  </thead>
  <tbody>
    <% @recipe.each do |recipe| %> 
      <tr>
        <td>
          <%= recipe.nome %>
        </td>
         <td>
          <%= recipe.descrizione %>
        </td>
        <td>
          <%= recipe.category.name %>
        </td>
	<td>
          <%= image_tag recipe.immagine.url(:thumb)   %>
        </td>
	<td>	
	<%= link_to "Dettagli" ,recipe_path(recipe) %>
	</td>      
	</tr>
    <% end %>
  </tbody>
</table>
<%= link_to "Inserisci una ricetta" ,new_recipe_path %>

