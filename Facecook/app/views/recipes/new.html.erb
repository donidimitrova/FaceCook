<div class="page-header"><h1 style="font-family: 'Trade-Winds',cursive; letter-spacing:1px">Inserisci Ricetta</h1></div>

<%= form_for @recipe do |f| %>

<div class="field">
    <%= f.label :nome %><br />
    <%= f.text_field :nome, autofocus: true, autocomplete: "nome", :required => true %>
  </div>
  <div class="field">
  <%= f.label :categoria %><br />
  <%= select_tag(:category_id, options_for_select(@categories), :prompt => "Seleziona categoria", :required => true) %>
  </div>
  <div class="field">
    <%= f.label :Ingredienti %><br />
    <%= f.text_field :link, autofocus: true, autocomplete: "link", :required => true%>
  </div>
  <div class="field">
    <%= f.label :descrizione %><br />
    <%= f.text_area :descrizione,  cols: 40, rows: 3, autofocus: true, autocomplete: "descrizione", :required => true %>
  </div>
    <div class="form-group">
    <%= f.label :immagine%>
    <%= f.file_field :immagine %>
  </div>



  <div class="actions">
    <%= f.submit "Inserisci ricetta", class: 'btn btn-info a' %>
  </div>
  <br>
<button type="button" class="btn btn-info"> <a> <%= link_to "Torna alla home",root_path%></a></button>
<% end %>




