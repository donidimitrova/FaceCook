<div class="page-header"><h1 style="font-family: 'Trade-Winds',cursive; letter-spacing:1px">Modifica Ricetta</h1></div>

<%= form_for @recipe do |f| %>

<div class="field">
    <%= f.label :nome %><br />
    <%= f.text_field :nome, autofocus: true, autocomplete: "nome" %>
  </div>
  <div class="field">
  <%= f.label :categoria %><br />
  <%= f.select :category_id, @categories%>
  </div>
  <div class="field">
    <%= f.label :link %><br />
    <%= f.text_field :link, autofocus: true, autocomplete: "link" %>
  </div>
  <div class="field">
    <%= f.label :descrizione %><br />
    <%= f.text_area :descrizione,  cols: 40, rows: 3, autofocus: true, autocomplete: "descrizione" %>
  </div>
    <div class="form-group">
    <%= f.label :immagine%>
    <%= f.file_field :immagine %>
  </div>


  <div class="actions">
    <%= f.submit "Modifica ricetta", class: 'btn btn-info' %>
  </div><br>
  <%= link_to "Torna alla ricetta" ,recipe_path(@recipe), class: "btn btn-info"%>

<% end %>