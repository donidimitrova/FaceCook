<!-- app/views/pages/home.html.erb -->

<!--Add a Link to Facebook-->
<% if user_signed_in? %>
<div class="center jumbotron" >


  <h3 style="font-family: 'Rowdies', cursive;  letter-spacing: 1px;">Benvenuto a Facecook <%= current_user.name %>!</h3>
  <%= current_user.name %>!
  <%= current_user.username %>!
  <%= current_user.cognome %>!
  <%= current_user.categoria %>!
  <% if current_user.avatar? %>
      <%= image_tag current_user.avatar.url(:thumb) %>

    <% elsif current_user.image? %>
      <%= image_tag current_user.image %>
    <% else %>
      
    <% end %>
 


  <h3>
    Sei entrato! Ora divertiti

  </h3>


</div>

<% else %>
            

            <div class="center jumbotron" >


  <h1 style="font-family: 'Sriracha', cursive;">Benvenuto a Facecook! </h1>

  <h2 style="font-family: 'Sriracha', cursive;">
    Clicca per registrarti
  </h2>

  <%= link_to "Registrati ora!", new_user_registration_path, class: "btn btn-lg btn-primary" %>
</div>



<% end %>

