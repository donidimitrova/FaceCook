        </div>
        <div class="col-md-6 appassionato">
        
     
       
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

   



  <br />
  <div class="field">
    <%= f.label :username %><br />
    <%= f.text_field :username, autofocus: true, autocomplete: "username" %>
  </div>
  <br />

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>(Lascia in bianco se non vuoi cambiare)</i><br />
    <%= f.password_field :password, autocomplete: "Nuova password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> caratteri minimo</em>
    <% end %>
  </div>
<br />
  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "Nuova password" %>
  </div>
  <br>
    <div class="field">
    <%= f.label :current_password %> <i>(abbiamo bisogno della tua password attuale per aggiornarla)</i><br />
    <%= f.password_field :current_password, autocomplete: "Password attuale" %>
  </div>
  <br />



  <div class="actions">
    <%= f.submit "Aggiorna" %>
  </div>
<% end %>
          
           

        </div>
        
        
        
           

