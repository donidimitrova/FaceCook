<h2>Registrazione</h2>







<% if flash[:danger] != nil %>
    <div class = "alert alert-danger"> <%= flash[:danger] %> </div>
<% end %>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <br/>

              <div class="field">
                <%= f.label :username %><br />
                <%= f.text_field :username, autofocus: true, autocomplete: "username"%>
              </div>


              <div class="field">
                <%= f.label :nome %><br />
                <%= f.text_field :name, autofocus: true, autocomplete: "nome" %>
              </div>



              <div class="field">
                <%= f.label :cognome %><br />
                <%= f.text_field :cognome, autofocus: true, autocomplete: "cognome" %>
              </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> caratteri minimo)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field" id="categoria">
                <%= f.label :categoria %><br />
                <%= f.number_field :categoria, autofocus: true, class: 'form-control' %>
              </div>

  

  <div class="actions">
                <%= f.submit "Conferma" , :class=> "btn btn-lg btn-primary"%>
              </div>
            <% end %>

<%= render "devise/shared/links" %>

