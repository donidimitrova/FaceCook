<script type="text/javascript">

    $('document').ready(function(){
        $("#cuocorior").hide();
        $("#appassionato").hide();
        $("#ogre").hide();
        $("#image").hide();
        $("#categoria").hide();
    });

    $(function() {
          $("#1").click( function()
               {
                    var $imgvisible = $('.cuoco img:visible');
                    alert("Hai selezionato "+$imgvisible.attr('title'));
                    $('#cuocorior').show();
                    $("#appassionato").hide();
                    $("#ogre").hide();
                    $('#user_categoria').val(1);

               }
          );

          $("#2").click( function()
               {
                    var $imgvisible = $('.appassionato img:visible');
                    alert("Hai selezionato "+$imgvisible.attr('title'));
                    $('#appassionato').show();
                    $("#ogre").hide();
                    $("#cuocorior").hide();
                    $('#user_categoria').val(2);
               }
          );




    });


</script>

<!-- FontAwesome -->
  <link 
    rel="stylesheet"
    href="https://use.fontawesome.com/releases/v5.3.1/css/all.css"
