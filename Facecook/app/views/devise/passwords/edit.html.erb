  <body class="newpassword   ">

    <div class=" prova  ">
<h2 style="font-family: 'Rowdies', cursive; text-shadow: 1px 1px #b4b4b4; letter-spacing: 1px;">Cambio password</h2>
<br>
  
 <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    <%= f.label :password, "New password" %><br />
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> caratteri minimo)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "nuova password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Conferma la nuova password" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "nuova password" %>
  </div>

  <div class="actions">
    <%= f.submit "Cambia password" %>
  </div>
<% end %>


 </div>
</body>
